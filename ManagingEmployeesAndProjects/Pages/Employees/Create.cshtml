@page
@model ManagingEmployeesAndProjects.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewEmployee.FirstName" class="control-label"></label>
                <input asp-for="NewEmployee.FirstName" class="form-control" />
                <span asp-validation-for="NewEmployee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEmployee.LastName" class="control-label"></label>
                <input asp-for="NewEmployee.LastName" class="form-control" />
                <span asp-validation-for="NewEmployee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEmployee.Sex" class="control-label"></label>
                <select asp-for="NewEmployee.Sex" class="form-control" asp-items="ViewBag.Sex"></select>
                <span asp-validation-for="NewEmployee.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEmployee.Photo" class="control-label"></label>
                <input asp-for="NewEmployee.Photo" class="form-control" />
                <span asp-validation-for="NewEmployee.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEmployee.SubdivisionId" class="control-label"></label>
                <select asp-for="NewEmployee.SubdivisionId" class="form-control" asp-items="ViewBag.SubdivisionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

